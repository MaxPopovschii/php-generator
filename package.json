{
  "name": "php-generator-structure-web",
  "displayName": "PHP Full-Stack Structure Generator",
  "publisher": "vincentgottemda",
  "description": "ðŸš€ Generate complete PHP fullstack structures: MVC Advanced, MVP, Layered, REST API, Microservices, Functional. Docker ready, PSR-4 compliant, production-ready code.",
  "version": "1.0.0",
  "icon": "matreshka.png", 
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxPopovschii/php-generator.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "php",
    "generator",
    "mvc",
    "mvp",
    "rest api",
    "microservices",
    "fullstack",
    "crud",
    "scaffolding",
    "boilerplate",
    "docker",
    "psr-4"
  ],
  "activationEvents": [
    "onCommand:extension.generatePhpStructure"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "php-structure-generator",
          "title": "PHP Structure Generator",
          "icon": "$(bracket)"
        }
      ]
    },
    "views": {
      "php-structure-generator": [
        {
          "id": "phpStructureView",
          "name": "PHP Structure",
          "icon": "$(symbol-structure)"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.generatePhpStructure",
        "title": "Generate PHP Structure",
        "category": "PHP Generator",
        "icon": "$(add)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
